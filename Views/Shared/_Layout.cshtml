<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <a asp-controller="Home" asp-action="Index">Home</a>
        <a asp-controller="Home" asp-action="Edit">Creat Post</a>
        <a asp-controller="AdminPanel" asp-action="Index">Management</a>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Auth" asp-action="Logout">SignOut</a>
        }
        else
        {
            <a asp-controller="Auth" asp-action="Login">SignIn</a>
        }

    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
